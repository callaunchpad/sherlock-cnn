{
	"dataset_dir":"data/food-101/",
	"model_dir":"data/models/",

	"im_width":512,
	"im_height":512,
	"im_channels":3,

	"train_batch_size":100,
	"val_batch_size":16,

	"num_gpus":8,
	"num_preprocess_threads":4,

	"num_epoch":25,
	"learning_rate":0.0001,
	"optimizer":"rmsprop",
	"train_log_frequency":50,
	"eval_metric":"acc",
	
	"architecture": {
		"conv1": {
			"num_filter":20,
			"filter_size":5,
			"pool_filter_size":2,
			"act_type":"relu",
			"pool_type":"max",
			"pool_stride":2
		},
		"conv2": {
			"num_filter":50,
			"filter_size":5,
			"pool_filter_size":2,
			"act_type":"relu",
			"pool_type":"max",
			"pool_stride":2
		},
		"fc1": {
			"num_hidden":500,
			"act_type":"tanh"
		},
		"fc2": {
			"num_hidden":101
		}
	}
}
